import os
import yt_dlp

def download_instagram_video(url, output_path='F:/INSTA'):
    if not os.path.exists(output_path):
        os.makedirs(output_path)

    ydl_opts = {
        'outtmpl': os.path.join(output_path, '%(title)s.%(ext)s'),
        'quiet': False,
        'no_warnings': True,
        'format': 'mp4',
    }

    with yt_dlp.YoutubeDL(ydl_opts) as ydl:
        try:
            ydl.download([url])
            print(f"âœ… Downloaded: {url}\n")
            return True
        except Exception as e:
            print(f"âŒ Failed to download: {url} â€” {e}\n")
            return False

if __name__ == "__main__":
    print("ğŸ“¥ Instagram Video Downloader")
    print("Enter multiple Instagram video URLs (one per line). Type 'done' when finished.\n")

    urls = []
    while True:
        url = input("URL: ").strip()
        if url.lower() == 'done':
            break
        if url:
            urls.append(url)

    if not urls:
        print("â— No URLs entered. Exiting.")
    else:
        failed_urls = []
        for url in urls:
            success = download_instagram_video(url)
            if not success:
                failed_urls.append(url)

        print("\nâœ…âœ… All downloads attempted.\n")

        if failed_urls:
            print("âŒ The following URLs failed to download:")
            for fail in failed_urls:
                print(" -", fail)
        else:
            print("ğŸ‰ All videos downloaded successfully!")
